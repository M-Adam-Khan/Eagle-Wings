<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

<!-- Pattern for Move commands -->

 <category>
  <pattern>MOVE *</pattern>
  <template>
    The drone is moving <star/>!
    <think>
      <set name="direction"><star/></set>
    </think>
  </template>
</category>

<category>
  <pattern>* MOVE *</pattern>
  <template>
    <srai>MOVE <star index="2"/></srai>
  </template>
</category>

<category>
  <pattern>GO *</pattern>
  <template>
    <srai>MOVE <star/></srai>
  </template>
</category>

<category>
  <pattern>* GO *</pattern>
  <template>
    <srai>MOVE <star index="2"/></srai>
  </template>
</category>

