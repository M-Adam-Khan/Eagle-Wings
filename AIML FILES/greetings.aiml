<aiml version="1.0.1" encoding="UTF-8">

<!-- Bot Name Management -->
    <category>
        <pattern>WHAT IS YOUR NAME</pattern>
        <template>
            <condition name="bot_name">
                <li value="">My name is EAGLE WINGS.</li>
                <li>My name is <get name="bot_name"/>.</li>
            </condition>
        </template>
    </category>

    <category>
        <pattern>* WHAT IS YOUR NAME *</pattern>
        <template>
            <srai>WHAT IS YOUR NAME</srai>
        </template>
    </category>

    <category>
        <pattern>WHAT IS YOUR NAME *</pattern>
        <template>
            <srai>WHAT IS YOUR NAME</srai>
        </template>
    </category>

    <category>
        <pattern>* WHO ARE YOU</pattern>
        <template>
            <srai>WHAT IS YOUR NAME</srai>
        </template>
    </category>

    <category>
        <pattern>* YOUR NAME *</pattern>
        <template>
            <srai>WHAT IS YOUR NAME</srai>
        </template>
    </category>

    <category>
        <pattern>NOW YOUR NAME IS *</pattern>
        <template>
            <think>
                <set name="bot_name"><star/></set>
            </think>
            OK! Now my name is <star/>.
        </template>
    </category>

    <category>
        <pattern>* NEW NAME *</pattern>
        <template>
            <srai>NOW YOUR NAME IS <star/></srai>
        </template>
    </category>

